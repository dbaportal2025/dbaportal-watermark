# Server
PORT=4000
NODE_ENV=production

# Database (MySQL - AWS RDS)
DATABASE_URL="mysql://user:password@your-rds-endpoint:3306/watermark_db"

# AWS S3 (Required for production)
USE_S3=true
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
AWS_REGION="ap-northeast-2"

# Upload settings (for local development when USE_S3=false)
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760

# Frontend URL (CORS)
FRONTEND_URL="https://your-vercel-app.vercel.app"
