generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Image {
  id           String   @id @default(uuid())
  originalName String
  filename     String
  url          String
  width        Int
  height       Int
  size         Int
  mimeType     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("images")
}

model Logo {
  id        String   @id @default(uuid())
  name      String
  filename  String
  url       String
  width     Int
  height    Int
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("logos")
}

model Settings {
  id            String   @id @default(uuid())
  name          String   @default("default")
  logoPositionX Float    @default(0.02)
  logoPositionY Float    @default(0.02)
  logoAnchor    String   @default("top-left")
  logoScale     Float    @default(0.3)
  logoOpacity   Float    @default(1)
  datePositionX Float    @default(0.02)
  datePositionY Float    @default(0.06)
  dateFormat    String   @default("YY.MM")
  fontFamily    String   @default("Pretendard")
  fontSize      Int      @default(24)
  fontColor     String   @default("#FFFFFF")
  dateScale     Float    @default(0.15)
  dateOpacity   Float    @default(1)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("settings")
}

model AnnotationTemplate {
  id           String   @id @default(uuid())
  name         String
  type         String
  color        String   @default("#FF0000")
  thickness    Int      @default(2)
  lineStyle    String   @default("solid")
  borderRadius Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("annotation_templates")
}

model ProcessedImage {
  id           String   @id @default(uuid())
  originalId   String
  filename     String
  url          String
  settings     Json
  createdAt    DateTime @default(now())

  @@map("processed_images")
}

model User {
  id           Int       @id @default(autoincrement())
  userId       Int?      @map("user_id")
  email        String?   @db.VarChar(200)
  name         String?   @db.VarChar(50)
  provider     String?   @db.VarChar(20)
  clinicId     Int?      @map("clinic_id")
  unifiedToken String?   @db.Text @map("unified_token")
  createdAt    DateTime? @map("created_at")
  updatedAt    DateTime? @map("updated_at")

  @@map("users")
}